# ─── Server ───────────────────────────────────────────────────────────────────
NODE_ENV=production
PORT=5000

# ─── Database ─────────────────────────────────────────────────────────────────
MONGODB_URI=mongodb+srv://<user>:<password>@cluster.mongodb.net/skillswap

# ─── Authentication ───────────────────────────────────────────────────────────
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRE=7d

# ─── Client ───────────────────────────────────────────────────────────────────
CLIENT_URL=https://your-frontend.vercel.app
FRONTEND_URL=https://your-frontend.vercel.app

# ─── Cloudinary (file uploads) ────────────────────────────────────────────────
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ─── Agora (video sessions) ───────────────────────────────────────────────────
AGORA_APP_ID=your_agora_app_id
AGORA_APP_CERTIFICATE=your_agora_certificate

# ─── Stripe (payments) ────────────────────────────────────────────────────────
STRIPE_SECRET_KEY=sk_live_your_stripe_secret
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ─── Email (Nodemailer) ───────────────────────────────────────────────────────
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=noreply@skillswap.com

# ─── OpenAI (AI summaries) ────────────────────────────────────────────────────
OPENAI_API_KEY=sk-your_openai_key

# ─── Redis (Bull queues) — not available on Vercel free tier ──────────────────
REDIS_URL=redis://localhost:6379
